<h1>Resultados de la búsqueda</h1>

<% if @clientes.present? %>
  <h2>Clientes encontrados</h2>
  <ul>
    <% @clientes.each do |cliente| %>
      <li>
        <%= cliente.nombre %>
        <% if cliente.peliculas_arrendadas.present? %>
          (Películas arrendadas: <%= cliente.peliculas_arrendadas.pluck(:titulo).join(", ") %>)
        <% else %>
          (No ha arrendado películas)
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No se encontraron clientes.</p>
<% end %>

<% if @peliculas.present? %>
  <h2>Películas encontradas</h2>
  <ul>
    <% @peliculas.each do |pelicula| %>
      <li>
        <%= pelicula.titulo %>
        <% if pelicula.clientes.present? %>
          (Arrendada por: <%= pelicula.clientes.pluck(:nombre).join(", ") %>)
        <% else %>
          (No ha sido arrendada)
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No se encontraron películas.</p>
<% end %>

<p><%= link_to 'Volver', clientes_path %></p>


