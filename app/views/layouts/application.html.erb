<!DOCTYPE html>
<html>
  <head>
    <title>Proyecto Arriendos</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to 'Clientes', clientes_path, class: 'navbar-brand' %>
        <%= link_to 'CatÃ¡logo', catalogo_peliculas_path, class: 'navbar-brand' %>
        <%= form_tag(buscar_path, method: :get, class: 'd-flex') do %>
          <%= text_field_tag :query, params[:query], placeholder: 'Buscar...', class: 'form-control me-2' %>
          <%= submit_tag 'Buscar', class: 'btn btn-outline-success' %>
        <% end %>
      </div>
    </nav>

    <div class="container mt-4">
      <%= yield %>
    </div>
  </body>
</html>


